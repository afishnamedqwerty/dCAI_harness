    "category": "filesystem",
    "tags": [
        "security_tools",
        "filesystem_tools"
    ],
    "requires_sudo": false,
    "args": [
        {
            "name": "init",
            "description": "Initialize baseline for a directory",
            "required": false
        },
        {
            "name": "check",
            "description": "Check files against baseline",
            "required": false
        },
        {
            "name": "update",
            "description": "Update baseline with current state",
            "required": false
        },
        {
            "name": "list",
            "description": "List monitored paths",
            "required": false
        }
    ]
}