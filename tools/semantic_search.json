{
    "name": "Semantic Search",
    "description": "Search file contents using ripgrep with support for file type filtering, context lines, and case-insensitive matching.",
    "category": "filesystem",
    "tags": [
        "filesystem_tools",
        "dev_tools"
    ],
    "requires_sudo": false,
    "args": [
        {
            "name": "-t",
            "description": "File type (py, rs, js, ts, md)",
            "required": false
        },
        {
            "name": "-i",
            "description": "Case insensitive search",
            "required": false
        },
        {
            "name": "-c",
            "description": "Lines of context",
            "required": false
        },
        {
            "name": "-l",
            "description": "List matching files only",
            "required": false
        }
    ]
}