            ]
        },
        "network_tools": {
            "description": "Network analysis and monitoring tools",
            "tools": [
                "portlist",
                "firewall_auditor"
            ]
        },
        "rootkit_tools": {
            "description": "Rootkit detection and system integrity tools",
            "tools": [
                "chkrootkit"
            ]
        },
        "all": {
            "description": "Special tag that includes all tools regardless of category",
            "tools": [
                "*"
            ]
        }
    },
    "usage": {
        "rust_example": "TaggedSecurityTools::new(registry, &[\"security_tools\"])",
        "multi_tag": "TaggedSecurityTools::new(registry, &[\"security_tools\", \"web_tools\"])",
        "all_tools": "TaggedSecurityTools::new(registry, &[\"all\"])"
    }
}