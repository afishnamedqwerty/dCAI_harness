                "ssh_auditor",
                "container_scanner",
                "memory_forensics",
                "portlist",
                "chkrootkit",
                "dep_auditor"
            ]
        },
        "web_tools": {
            "description": "Web scraping, API interaction, and content extraction tools",
            "tools": [
                "exa_search",
                "url_fetcher",
                "screenshot_ocr",
                "api_client",
                "rss_parser",
                "pdf_extractor"
            ]
        },
        "filesystem_tools": {
            "description": "File system operations, search, and manipulation tools",
            "tools": [
                "semantic_search",
                "file_metadata",
                "diff_tool",
                "archive_handler",
                "file_integrity",
                "pdf_extractor"
            ]
        },
        "dev_tools": {
            "description": "Development workflow tools for linting, testing, and version control",
            "tools": [
                "code_linter",
                "test_runner",
                "git_ops",
                "dep_auditor",
                "sandbox_exec",
                "container_scanner",
